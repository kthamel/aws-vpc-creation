pipeline {
    agent any

    stages {
        stage('Terraform version') {
            steps {
                sh 'terraform --version'
            }
        }

        stage('Check files') {
            steps {
                sh 'ls -l'
            }
        }

        stage('Terraform init') {
            steps {
                dir('vpc_configuration') {
                    sh 'terraform init -upgrade'
                }
            }
        }

        stage('Terraform plan') {
            steps {
                dir('vpc_configuration') {
                    sh 'terraform plan'
                }
            }
        }

        stage('Terraform destroy') {
            steps {
                dir('vpc_configuration') {
                    sh 'terraform destroy --auto-approve'
                }
            }
        }
    }
}
